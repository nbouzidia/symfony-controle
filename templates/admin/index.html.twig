{% extends 'base.html.twig' %}
{% block title %}Administration{% endblock %}
{% block body %}
<div class="min-h-screen bg-gray-100">
   <div class="max-w-7xl mx-auto py-6 sm:px-6 lg:px-8">
       <div class="px-4 py-6 sm:px-0">
           <div class="bg-white overflow-hidden shadow-xl sm:rounded-lg p-6">
               <h1 class="text-2xl font-bold text-gray-900 mb-4">
                   Dashboard Administrateur
               </h1>
               
               <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                   <!-- Carte Gestion des Recettes -->
                   <div class="bg-purple-100 p-6 rounded-lg shadow-md">
                       <div class="flex justify-between items-start mb-4">
                           <h2 class="text-xl font-bold text-purple-800">Gestion des Recettes</h2>
                           <span class="bg-purple-200 text-purple-800 py-1 px-3 rounded-full text-sm">
                               recettes
                           </span>
                       </div>
                       
                       <div class="space-y-4">
                           <a href="{{ path('app_recettes_new') }}" 
                              class="flex items-center justify-center w-full px-4 py-2 bg-purple-600 text-white rounded-md hover:bg-purple-700 transition-colors">
                               <i class="fas fa-plus mr-2"></i>
                               Nouvelle Recette
                           </a>
                           
                           <a href="{{ path('app_recettes') }}" 
                              class="flex items-center justify-center w-full px-4 py-2 bg-white text-purple-600 border border-purple-600 rounded-md hover:bg-purple-50 transition-colors">
                               <i class="fas fa-list mr-2"></i>
                               Voir toutes les recettes
                           </a>
                       </div>
                        {% if recettes is defined and recettes|length > 0 %}
                           <div class="mt-6">
                               <h3 class="text-sm font-semibold text-purple-800 mb-3">Derni√®res recettes :</h3>
                               <div class="space-y-2">
                                   {% for recette in recettes|slice(0, 3) %}
                                       <div class="flex items-center justify-between bg-white p-3 rounded-md shadow-sm">
                                           <span class="text-gray-700">{{ recette.nom }}</span>
                                           <div class="flex space-x-2">
                                               <a href="{{ path('app_recette_edit', {'id': recette.id}) }}" 
                                                  class="text-indigo-600 hover:text-indigo-800">
                                                   <i class="fas fa-edit"></i>
                                               </a>
                                               <a href="{{ path('app_recette_show', {'id': recette.id}) }}" 
                                                  class="text-blue-600 hover:text-blue-800">
                                                   <i class="fas fa-eye"></i>
                                               </a>
                                           </div>
                                       </div>
                                   {% endfor %}
                               </div>
                           </div>
                       {% endif %}
                   </div>
                    <!-- Carte Statistiques -->
                   <div class="bg-blue-100 p-6 rounded-lg shadow-md">
                       <h2 class="text-xl font-bold text-blue-800 mb-4">Statistiques</h2>
                       <div class="space-y-3">
                           <div class="flex justify-between items-center">
                               <span class="text-blue-700">Total Recettes</span>
                               <span class="font-bold text-blue-800"></span>
                           </div>
                           <div class="flex justify-between items-center">
                               <span class="text-blue-700">Total Avis</span>
                               <span class="font-bold text-blue-800"></span>
                           </div>
                       </div>
                   </div>
                    <!-- Carte Actions Rapides -->
                   <div class="bg-green-100 p-6 rounded-lg shadow-md">
                       <h2 class="text-xl font-bold text-green-800 mb-4">Actions Rapides</h2>
                       <div class="space-y-3">
                           <a href="{{ path('app_recettes_new') }}" 
                              class="flex items-center justify-between w-full px-4 py-2 bg-green-600 text-white rounded-md hover:bg-green-700 transition-colors">
                               <span>Ajouter une recette</span>
                               <i class="fas fa-plus"></i>
                           </a>
                       </div>
                   </div>
               </div>
           </div>
       </div>
   </div>
</div>
{% endblock %}